<h1>Upload to Mixcloud</h1>

<%= link_to "Download #{@title}", @download_url %>

<br/>
<p><%= @mixcloud_access_token %> </p>

<%= link_to "track", "recording9.m4a" %>
<br/>

<audio controls="controls">
  Your browser does not support the <code>audio</code> element.
  <source src="" type="audio/mp4">
</audio>
<br/>

<button id="upload" >Upload</button>

<script type="text/javascript">
		
	var mixcloud_access_token = "<%= @mixcloud_access_token %>";
	var download_url = "<%= @download_url %>";
	console.log(download_url);
	var file = "<%= @file %>";
	var name = "<%= @title %>";
	var	mixcloud_upload_url = "https://api.mixcloud.com/upload/?access_token="+mixcloud_access_token+"&mp3="+file+"&name="+name;

	$('button#upload').on('click', function(event) {
		console.log("fwjfwfjwifw");
		event.preventDefault()

		$.ajax({
		  type: "POST",
		  contentType: 'multipart/form-data',
		  url: mixcloud_upload_url
		})
		  .done(function( msg ) {
		    alert( "Data Saved: " + msg );
		  });

	});


</script>





